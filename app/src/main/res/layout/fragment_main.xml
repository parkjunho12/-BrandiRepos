<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".ui.main.view.MainFragment">
    <LinearLayout
        app:layout_constraintTop_toTopOf="parent"
        android:background="@color/purple_200"
        android:gravity="center"
        android:id="@+id/search_lin"
        android:layout_width="match_parent"
        android:layout_height="?attr/actionBarSize">
        <androidx.appcompat.widget.SearchView
            android:background="@drawable/search_round"
            app:queryHint="@string/hint"
            android:id="@+id/search_bar"
            app:defaultQueryHint="@string/hint"
            app:iconifiedByDefault="false"
            android:layout_width="351dp"
            android:layout_height="36dp">

        </androidx.appcompat.widget.SearchView>

    </LinearLayout>
    <ScrollView
        app:layout_constraintStart_toStartOf="parent"
        android:layout_marginStart="5dp"
        android:layout_marginEnd="5dp"
        app:layout_constraintTop_toBottomOf="@id/search_lin"
        app:layout_constraintBottom_toBottomOf="parent"
        android:layout_width="match_parent"
        android:layout_height="0dp">
        <androidx.recyclerview.widget.RecyclerView
            android:id="@+id/recyclerview_main"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"/>
        <com.mikhaellopez.circularprogressbar.CircularProgressBar
            android:id="@+id/circularProgressBar"
            android:layout_width="40dp"
            android:layout_height="40dp"
            android:layout_gravity="center"
            app:cpb_background_progressbar_color="@android:color/transparent"
            app:cpb_background_progressbar_width="5dp"
            app:cpb_progress_direction="to_right"
            app:cpb_progressbar_color="@color/purple_200"
            app:cpb_progressbar_width="5dp"
            app:cpb_indeterminate_mode="true"
            app:cpb_round_border="false" />
    </ScrollView>
</androidx.constraintlayout.widget.ConstraintLayout>